{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 2,

  "settings": {
    "appearanceTools": false,

    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false
    },

    "layout": {
      "contentSize": "900px",
      "wideSize": "1440px"
    },

    "typography": {
      "fluid": false,
      "fontFamilies": [
        {
          "slug": "system-sans",
          "name": "System Sans",
          "fontFamily": "-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, Liberation Sans, sans-serif, Apple Color Emoji, Segoe UI Emoji"
        }
      ],
      "fontSizes": [
        { "slug": "sm", "name": "Small", "size": "0.95rem" },
        { "slug": "base", "name": "Base", "size": "1rem" },
        { "slug": "lg", "name": "Large", "size": "1.125rem" },
        { "slug": "xl", "name": "XL", "size": "1.5rem" },
        { "slug": "xxl", "name": "XXL", "size": "2rem" },
        { "slug": "xxxl", "name": "Display", "size": "2.5rem" }
      ],

      "blocks": {
        "core/paragraph": {
          "typography": {
            "dropCap": false
          }
        }
      }
    },

    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingScale": { "steps": 0 }
    }
  },

  "styles": {
    "color": {
      "background": "#ffffff",
      "text": "#1f2937"
    },

    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.65",
      "fontWeight": "400"
    },

    "elements": {
      "heading": {
        "color": { "text": "#fff" },
        "typography": { "fontWeight": "600", "lineHeight": "1.25" }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxxl)",
          "fontWeight": "700"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxl)",
          "fontWeight": "700"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "600"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "fontWeight": "600"
        }
      },

      "link": {
        "color": { "text": "#111827" },
        "typography": { "textDecoration": "none" },
        ":hover": { "typography": { "textDecoration": "underline" } }
      },

      "button": {
        "border": { "radius": "0.375rem" },
        "color": { "background": "#111827", "text": "#ffffff" },
        "typography": { "fontWeight": "600" }
      }
    },

    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "lineHeight": "1.75"
        },
        "spacing": {
          "margin": {
            "top": "1rem",
            "bottom": "1rem"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "1.25rem",
      "padding": { "left": "1rem", "right": "1rem" }
    }
  }
}
